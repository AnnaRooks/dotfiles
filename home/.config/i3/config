# Constants
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $base00 #101218
set $base01 #1f222d
set $base02 #252936
set $base03 #7780a1
set $base04 #C0C5CE
set $base05 #d1d4e0
set $base06 #C9CCDB
set $base07 #ffffff
set $base08 #ee829f
set $base09 #f99170
set $base0A #ffefcc
set $base0B #a5ffe1
set $base0C #97e0ff
set $base0D #97bbf7
set $base0E #c0b7f9
set $base0F #fcc09e

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

set $term urxvt
set $home /home/tet
set $i3conf ~/.config/i3
set $menu ~/.config/i3/dmenu_run_history
set $lockcmd ~/.config/i3/lock.sh

# General Configuration
font pango: Noto 10
gaps inner 10
gaps outer 0
floating_modifier $mod
hide_edge_borders both
default_border none

# Window-Related Bindings
bindsym $mod+a focus parent

bindsym $mod+e layout toggle split
bindsym $mod+w layout tabbed

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+Shift+q kill
bindsym $mod+Shift+space floating toggle
bindsym $mod+f fullscreen toggle

bindsym $mod+b splith
bindsym $mod+v splitv
bindsym $mod+space focus mode_toggle
bindsym $mod+r mode "  "

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# enable Alt+Tab Functionality
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# Resize Window mode
mode "  " {
    bindsym $left resize shrink width 10 px or 10 ppt
    bindsym $down resize grow height 10 px or 10 ppt
    bindsym $right resize grow width 10 px or 10 ppt
    bindsym $up resize shrink height 10 px or 10 ppt
    # Arrow Key Equivalents
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    # Exit
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Restart-Related Bindings
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Powering System mode
set $mode_system "System [l]ock, [s]uspend, [h]ibernate, [E]xit, [R]eboot, [S]hutdown"
mode $mode_system {
    bindsym l exec "$lockcmd"; mode "default"
    bindsym s exec "$lockcmd & (sleep 1 && systemctl suspend)"; mode "default"
    bindsym h exec "$lockcmd & (sleep 1 && systemctl hibernate)"; mode "default"
    bindsym Shift+r exec "systemctl reboot"
    bindsym Shift+s exec "systemctl poweroff -i"
    bindsym Shift+e exit

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Escape mode $mode_system

# Program-Related Bindings
set $mode_toolset "[F]irefox, [T]hunderbird, [D]iscord, [t]elegram, [A]ll"
mode $mode_toolset {
    bindsym Shift+f exec "GTK_THEME=Arc firefox -P default"; mode "default"
    bindsym Shift+p exec "GTK_THEME=Arc firefox -P PrivatePlus"; mode "default"
    bindsym Shift+t exec "thunderbird"; mode "default"
    bindsym Shift+d exec "discord"; mode "default"
    bindsym t       exec "telegram-desktop"; mode "default"

    bindsym Shift+a exec "GTK_THEME=Arc firefox -P default"; exec "thunderbird"; exec "discord"; exec "telegram-desktop"; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+a mode $mode_toolset

bindsym $mod+Return exec "$term"
bindsym $mod+d exec "$menu"

# Screenshoot-Related Bindings
bindsym --release Print exec "xfce4-screenshooter -f"
bindsym --release $mod+Print exec "xfce4-screenshooter -w"
bindsym --release Shift+Print exec "xfce4-screenshooter -r"
bindsym --release Control+Print exec "$i3conf/screencast"
bindsym --release Control+$mod+Print exec "$i3conf/screencast nomouse"
bindsym --release Control+Shift+Print exec "pkill -f x11grab"

# XF86 and Similar Key Bindings
bindsym XF86AudioLowerVolume exec "pactl set-sink-mute 0 0 && pactl set-sink-volume 0 -5%"
bindsym XF86AudioRaiseVolume exec "pactl set-sink-mute 0 0 && pactl set-sink-volume 0 +5%"
bindsym XF86AudioMute exec "pactl set-sink-mute 0 toggle"
bindsym XF86AudioMicMute exec "amixer set Capture toggle"
bindsym XF86MonBrightnessUp exec "xbacklight +5"
bindsym XF86MonBrightnessDown exec "xbacklight -5"

# Workspace-Related Bindings
